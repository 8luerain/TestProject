<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="test.bluerain.youku.com.testproject.MainActivity">

    <TextView
        android:id="@+id/id_txv_hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"

        android:visibility="gone"/>

    <TextView
        android:id="@+id/id_txv_test"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/id_txv_hello"
        android:gravity="center"
        android:scrollbars="vertical"
        android:text="TEST VIEW"
        android:textSize="50sp"

        android:visibility="gone"/>

    <test.bluerain.youku.com.testproject.ui.GameFlowTagView
        android:id="@+id/id_tag_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </test.bluerain.youku.com.testproject.ui.GameFlowTagView>


    <Button
        android:id="@+id/id_btn_change_text_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />


    <test.bluerain.youku.com.testproject.ui.GameTagGradview
        android:id="@+id/id_tag_grad_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">


    </test.bluerain.youku.com.testproject.ui.GameTagGradview>
</RelativeLayout>
